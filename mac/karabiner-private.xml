  <item>
    <name>Send F13 for Right Option</name>
    <identifier>private.send_f13_for_ropt</identifier>
    <autogen>--KeyToKey-- KeyCode::OPTION_R,
                          KeyCode::F13 <!--, ModifierFlag::SHIFT_L
                                           | ModifierFlag::CONTROL_L-->
    </autogen>
  </item>
  <item>
      <name>Send Contrl-up/down for Right Option-up/down</name>
      <identifier>private.ctrl_updown_for_ropt_updown</identifier>
      <autogen>--KeyToKey-- KeyCode::CURSOR_UP, ModifierFlag::OPTION_R,
                            KeyCode::CURSOR_UP, ModifierFlag::CONTROL_L
      </autogen>
      <autogen>--KeyToKey-- KeyCode::CURSOR_DOWN, ModifierFlag::OPTION_R,
                            KeyCode::CURSOR_DOWN, ModifierFlag::CONTROL_L
      </autogen>
  </item>
