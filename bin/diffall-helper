#!/bin/sh
function dircat {
  if [ -z "${2##/*}" ]; then
    echo "$2"
  else
    echo "$1/$2"
  fi
}

function link_if {
  if [ "$1" != "/dev/null" -a -e "$1" ]; then $COPY "$1" "$2"; fi
}

mkdir -p "$(dirname "$DIRNAME/old/$1")"
mkdir -p "$(dirname "$DIRNAME/new/$1")"

link_if "$(dircat "$ROOT" "$2")" "$DIRNAME/old/$1"
link_if "$(dircat "$ROOT" "$5")" "$DIRNAME/new/$1"

while [ -e "$PIDFILE" ]; do sleep 1; done
